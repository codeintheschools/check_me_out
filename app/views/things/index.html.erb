<h1>Things</h1>

<%= link_to 'New Thing', new_thing_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= link_to thing.name, thing_path(thing) %></td>
        <td><%= thing.quantity %></td>
        <td><button>Delete</button></td>
      </tr>
    <% end %>
  </tbody>
</table>